<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/grad_test_two"
    android:theme="@style/custom_for_user_details"
    tools:context=".user_data">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/step_1"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/family"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="@string/enter_your_name"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="10dp"
            android:imeOptions="actionNext"
            android:nextFocusForward="@id/family"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/family"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="@string/enter_your_family"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/custom_edit_text"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="10dp"
            android:imeOptions="actionDone"
            app:boxCornerRadiusBottomEnd="30dp"
            app:boxCornerRadiusBottomStart="30dp"
            app:boxCornerRadiusTopEnd="30dp"
            app:boxCornerRadiusTopStart="30dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="@string/enter_your_age"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000"
                android:textSize="20sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

             <androidx.cardview.widget.CardView
                 android:layout_width="0dp"
                 android:layout_height="50dp"
                 android:layout_marginEnd="10dp"
                 android:layout_weight="1"
                 app:cardCornerRadius="30dp">
                 <Button
                     android:id="@+id/male"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:scaleY="1.3"
                     android:scaleX="1.3"
                     android:textSize="13sp"
                     android:backgroundTint="#0277BD"
                     android:text="@string/male"
                     android:textColor="@color/white"
                     tools:ignore="ButtonStyle" />

             </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="30dp">

                <Button
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:scaleY="1.3"
                    android:scaleX="1.3"
                    android:textSize="13sp"
                    android:backgroundTint="#0277BD"
                    android:text="@string/female"
                    android:textColor="@color/white"
                    tools:ignore="ButtonStyle" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textSize="13sp"
                android:backgroundTint="#0277BD"
                android:text="@string/next"
                android:textColor="@color/white"
                tools:ignore="ButtonStyle" />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="@string/step_2"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/up"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/upload_photo"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/yellow"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="30dp">

            <Button
                android:id="@+id/upload"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:scaleY="1.3"
                android:scaleX="1.3"
                android:textSize="13sp"
                android:backgroundTint="#0277BD"
                android:text="@string/upload_image"
                android:textColor="@color/white"
                tools:ignore="ButtonStyle" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</LinearLayout>